params {
  outdir = 'results'
  mode = false
  seq_file = false
  input = false
  guppy = false
  flowcell = 'FLO-MIN106'
  kit = 'SQK-LSK109'
  config_file = 'dna_r9.4.1_450bps_modbases_dam-dcm-cpg_hac.cfg'

  cu_qual = false
  cu_length = false
  cu_headcrop = false
  cu_reference = false
  gz = false
  rna = false
  cu_phmm_file = false
  cu_adapters = false
  cu_method = false
  cu_primer_config = false


  assembler = false
  assembly = false
  fastq = false
  polish = false
  racon_polish = false
  medaka_polish = false
  short_polish_map = 'bwa'
  short_polish = false
  short_reads = false
  long_reads = false
  genome_size = false
  skip_qc = false

  busco_long = false
  quast_reference = false
  quast_features = false

  masurca_file = false

  nextdenovo_bin = false
  nextdenovo_cfg = false

  medaka_model = 'r941_min_high_g360'

  genome = false

  proteins = false
  skip_abinitio = false
  skip_softmask = false

  short_reads = false
  ont_reads = false
  pb_reads = false
  single_end = false
  cds = false
  orientation = 'fr'
  mikado_scoring = 'plants.yaml'
  srna = false
  srna_reads = false

  scratch = false

  tracedir = "${params.outdir}/pipeline_info"
}

profiles {
    standard {
			includeConfig 'conf/nibb-bias5.conf'
		}

		cde {
			includeConfig 'conf/nibb-cde.conf'
      singularity.enabled = true
      singularity.autoMounts = true
		}

    cctb {
      includeConfig 'conf/cctb.conf'
    }

    local {
			process.executor = 'local'
    }

}

timeline {
  enabled = true
  file = "${params.tracedir}/timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/dag.svg"
}

manifest {
  name = 'NanoporeSeq'
  author = 'Gergo Palfalvi'
  homePage = 'https://github.com/palfalvi/nanoporeseq'
  description = 'Utils for ONT based sequence analysis'
  mainScript = 'main.nf'
  nextflowVersion = '>=0.32.0'
  version = '1.0dev'
}
