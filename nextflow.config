params {
  mode = false
  seq_fofn = false
  input = false
  flowcell = 'FLO-MIN106'
  kit = 'SQK-LSK109'
  barcode_kit = false
  assembler = 'miniasm'
  fastq = false
  short = false
  polish = false
  genome_size = false
  busco = false

  masurca_file = false

  genome = false

  outdir = 'results'
  scratch = false
}

profiles {
    standard {
			includeConfig 'conf/nibb-bias5.conf'
		}

		cde {
			includeConfig 'conf/nibb-cde.conf'
		}

    local {
			process.executor = 'local'
    }

}

timeline {
  enabled = true
  file = "${params.tracedir}/timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/dag.svg"
}

manifest {
  name = 'NanoporeSeq'
  author = 'Gergo Palfalvi'
  homePage = 'https://github.com/palfalvi/nanoporeseq'
  description = 'Utils for ONT based sequence analysis'
  mainScript = 'main.nf'
  nextflowVersion = '>=0.32.0'
  version = '1.0dev'
}
